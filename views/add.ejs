<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-900 px-10 py-5">
        <h1 class="text-xl text-white">Create a new Post</h1>
        <hr class="mt-2 opacity-20 w-[175px]">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 border-[0.5px] rounded-lg mt-2 text-white" type="file" name="postimage">
            <input class="block w-1/3 px-3 py-2 border-2 rounded-lg mt-2" type="text" placeholder="Title" name="title">
            <textarea class="block h-40 md:h-65 w-full md:w-1/3 px-3 py-2 border-2 rounded-lg mt-2 text-sm md:text-base" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2  rounded-lg mt-2 bg-red-700" type="submit" value="Create Post">
        </form>
    </div>

